<div class="row">
  <div class="col-md-4 col-sm-4 col-lg-4 col-xs-4"></div>
  <div class="col-md-4 col-sm-4 col-lg-4 col-xs-4 well">
    <h3 style="display:inline">Sign In</h3> or <a href="/register">create an account</a>
    <form role="form" method="POST">
      <div class="form-group">
	<label for="username">Username</label>
	<input name="username" class="form-control" type="text" placeholder="Enter username">
      </div>
      <div class="form-group">
	<label for="password">Password</label>
	<input name="password" type="password" class="form-control" placeholder="Password">
      </div>
      <button type="submit" name="Login" class="btn btn-default">Sign In</button>
    </form>
  </div>
</div>
