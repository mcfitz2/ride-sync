<h3>Account</h3>
<form action="/settings/account" method="POST" class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-3 control-label">Sync</label>
    <div class="col-sm-9">
      <select class="form-control">
	{{#if user.fetch_enabled}}
	<option selected="true" name="enable">Enabled</option>
	<option name="disabled">Disabled</option>
	{{else}}
	<option name="enable">Enabled</option>
	<option selected="true" name="disable">Disabled</option>
	{{/if}}
      </select>
    </div>
  </div>
  <button type="submit" class="pull-right btn btn-default">Save</button>
</form>


